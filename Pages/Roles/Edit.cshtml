@page
@model MusicReviewsWebsite.Pages.Roles.EditModel
@{
}
<h1>Edit</h1>

<h4>Roles</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserVM.Id" />
            <div class="form-group">
                <label asp-for="UserVM.Name" class="control-label"></label>
                <input asp-for="UserVM.Name" class="form-control" />
                <span asp-validation-for="UserVM.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserVM.Roles" class="control-label"></label>
                @for (var i = 0; i < Model.UserVM.Roles.Count; i++)
                {
            <li>       
                <input type="checkbox" asp-for="@Model.UserVM.Roles[i].Selected"  />
                <label asp-for="@Model.UserVM.Roles[i].Selected">@Model.UserVM.Roles[i].Name</label>
                <input type="hidden" asp-for="@Model.UserVM.Roles[i].Name" />                
            </li>
                }
                <span asp-validation-for="UserVM.Roles" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
