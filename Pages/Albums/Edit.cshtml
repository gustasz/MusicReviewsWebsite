@page
@model MusicReviewsWebsite.Pages.Albums.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Album</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AlbumVM.Id" />
            <div class="form-group">
                <label asp-for="AlbumVM.ArtistId" class="control-label"></label>
                <select asp-for="AlbumVM.ArtistId" class="form-control" asp-items="ViewBag.ArtistId"></select>
                <span asp-validation-for="AlbumVM.ArtistId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlbumVM.Name" class="control-label"></label>
                <input asp-for="AlbumVM.Name" class="form-control" />
                <span asp-validation-for="AlbumVM.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlbumVM.ReleaseDate" class="control-label"></label>
                <input asp-for="AlbumVM.ReleaseDate" type="date" class="form-control" />
                <span asp-validation-for="AlbumVM.ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlbumVM.FormFile" class="control-label"></label>
                <input asp-for="AlbumVM.FormFile" type="file" class="form-control">
                <span asp-validation-for="AlbumVM.FormFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
