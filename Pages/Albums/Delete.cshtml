<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Album</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Album.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Album.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Album.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Album.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Album.AverageRating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Album.AverageRating)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Album.ReviewCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Album.ReviewCount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Album.CoverPath)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Album.CoverPath)
        </dd>
